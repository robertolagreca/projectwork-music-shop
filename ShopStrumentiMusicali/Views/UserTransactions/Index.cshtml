@model IEnumerable<ShopStrumentiMusicali.Models.UserTransaction>

<!--@@{
    ViewData["Title"] = "Index";
} -->

<div class="container">
    
    <div class="row my-3">
        <div class="col"></div>
        <div class="col-md-8 background-login">
            <h1 class="background-login text-center pb-1 mb-0">Transazioni degli utenti</h1>
            <table class="background-login table-responsive-md table-sm text-center">
                
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Date
                <!--@@Html.DisplayNameFor(model => model.TransactionDate)-->
            </th>
            <th>
                Quantity
                <!--@@Html.DisplayNameFor(model => model.TransactionQuantity)-->
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instrument)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransactionQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instrument.Id)
                                
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
        <div class="col"></div>
    </div>
</div>

<div class="container" style="text-align:right;">
    <a class="text-white" aria-current="page" href="\UserTransactions\Index\">Torna su</a>
</div>