@using Microsoft.AspNetCore.Identity;
@model ICollection<IdentityUser>

@{
    ViewData["Title"] = "Users";
}

<div class="container rounded p-3 mt-5">
<div class="row text-center">
<div class="col"></div>
    <div class="col-md-6 background-login">
    <h1 class="display-4">Utenti:</h1>
    @if (@Model != null && @Model.Any())
    {
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Email</th>
          <th scope="col">Edit</th>
        </tr>
      </thead>
      <tbody>
    
        @foreach(var user in Model){
        <tr>
          <th scope="row">@user.Id</th>
          <td>@user.Email</td>
          <td>
              <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
          </td>
        
        </tr>
        }
      </tbody>
    </table>
    }
</div>
        <div class="col"></div>
</div>
</div>
<div class="container" style="text-align:right;">
    <a class="text-white" aria-current="page" href="\User\Index\">Torna su</a>
</div>