<!-- Da inserire @@model da inserire il controller-->
@model InstrumentCategoriesView

@{
    Layout = "_Layout";
}

<div class="container-fluid rounded p-3">
    <div class="row my-5">
        <div class="col"></div>

        <div class="d-flex card col-md-4 background-login">
        <h1 class="text-dark">Compra strumento</h1>

            <form asp-controller="Administration" asp-action="Purchase" method="post">
                @Html.AntiForgeryToken()

                <div class="row p-0 mb-3 justify-content-center">
                    <div class="col-xs-2">
                    <h3> <label class="fw-bolder">Quantità:</label> </h3>
                    <input asp-for="Quantity" type="text" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <!--Bottone per salvare acquisti-->
            <div class="my-2 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-danger" formmethod="post">Acquista</button>
            </div>   
    </div>

                
        <div id="instrument_container">
         </div>
    

    </form>

    </div>
        <div class="col"></div>
    </div>

</div>

<div class="container" style="text-align:right;">
      <a class="text-white" aria-current="page" href="\Administration\Purchase\@Model.Instrument.Id">Torna su</a>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js"></script>
<script type="text/javascript">
            
    //AVVISO ANCORA IN BOZZA. DA CONTROLLARE NOMI VARIABILI.
    const id = window.location.href.substring(window.location.href.lastIndexOf('/') + 1);
    axios.get("/api/InstrumentApi/" + id).then((res) => {
        let instrument = res.data;
        console.log('strumento visualizzato', instrument);


        document.getElementById('instrument_container').innerHTML +=
            `

                                     
                                            <h5 class="card-title p-2 mb-2 border-3 border-dark border-top border-bottom">Dettagli strumento</h5>
                                                     <p class="card-text p-1 border-1 border-dark border-bottom">Nome: ${instrument.name}</p>
                                                     <p class="card-text p-1 border-1 border-dark border-bottom">Descrizione: ${instrument.description}</p>
                                                     <p class="card-text p-1border-1 border-dark border-bottom">Prezzo: ${instrument.price}&euro;</p>
                                                     <p class="card-text p-1 border-1 border-dark border-bottom">Quantità: ${instrument.quantity}</p>
                                                     <p class="card-text p-1 border-1 border-dark border-bottom">Likes: ${instrument.userLikes}</p>

                                         <div class="p-0 mb-3 col-xs-2 form-check d-flex justify-content-center">
                                           <div class="card p-0 m-0 border-2" style="width: 22rem; min-height: 30rem;">
                                            <img src="${instrument.imageURL}" class="card-img-top" alt="strumento">
                                           </div>
                                         </div> 
                               

                        `;

    });


</script>