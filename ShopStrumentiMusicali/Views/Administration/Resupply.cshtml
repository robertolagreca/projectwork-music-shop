@model InstrumentCategoriesView

@{
    Layout = "_Layout";
}

<div class="container-fluid background-login rounded p-2 my-5 col-md-4">

<form asp-controller="Administration" asp-action="Resupply" method="post">
    @Html.AntiForgeryToken()
            <h1 class="text-black text-center">Rifornisci strumento</h1>
    <div class="mb-3 form-check p-1">
          <label>Id:</label>
          <input asp-for="Instrument.Id" type="text" class="form-control" disabled />
     </div>

    <div class="mb-3 form-check p-1">
          <label>Nome:</label>
                <input asp-for="Instrument.Name" type="text" class="form-control" disabled />
          <span asp-validation-for="Instrument.Name" class="text-danger" disabled></span>
    </div>

    <div class="mb-3 form-check p-1">
         <label>Fornitore:</label>
         <input asp-for="Supplier" type="text" class="form-control" />
         <span asp-validation-for="Supplier" class="text-danger"></span>
    </div>

    <div class="mb-3 form-check p-1">
        <label>Quantita:</label>
        <input asp-for="Quantity" type="text" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <!--Bottone per salvare acquisti-->
     <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-2">
        <button type="submit" class="btn btn-primary btn-danger" formmethod="post">Acquista</button>
    </div>

</form>
</div>

<div class="container" style="text-align:right;">
    <a class="text-white" aria-current="page" href="\Administration\Resupply\@Model.Instrument.Id">Torna su</a>
</div>