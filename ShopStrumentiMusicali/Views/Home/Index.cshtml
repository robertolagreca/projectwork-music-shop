<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.20.0/axios.min.js"></script>

<script type="text/javascript">



    loadInstruments();

    function likeClicked(id, userLikes) {
        var requestBody = {
            "userLikes": userLikes
        }
        axios.patch(`/api/instrumentApi/${id}`, requestBody);

    }

    function loadInstruments() {
        axios.get('/api/instrumentApi/').then((res) => {



            console.log('strumento visualizzato', res);


            if (res.data.instruments.length == 0) {

                document.getElementById('js_no_instrument').classList.remove('d-none');
                document.getElementById('js_instrument_table').classList.add('d-none');

            } else {

                document.getElementById('js_instrument_table').classList.remove('d-none');
                document.getElementById('js_no_instrument').classList.add('d-none');





                document.getElementById('js_instrument_table').innerHTML = '';

                res.data.instruments.forEach(instrument => {

                    console.log('strumento', instrument);

                    document.getElementById('js_instrument_table').innerHTML +=
                        `  
                            <div class="col-sm-4 d-flex align-items-stretch my-3">
                                                    <div class="card p-0 m-0" style="width: 22rem; min-height: 30rem;">

                                                    <div class="card-image">
                                                              <img src="${instrument.imageURL}" class="card-img-top" alt="strumento">
                                                        </div>
                                                    <div class="card-body p-0 m-0">

                                                    <h5 class="card-title">Nome: ${instrument.name}</h5>
                                                            <p class="card-text">Descrizione: ${instrument.description}</p>

                                                            <p class="card-text">Prezzo: ${instrument.price}&euro;</p>
                                                     </div>
                                                     <div class="card-footer col border-0 text-center justify-content-center bg-white">

                                                             <a href="/Home/Details/${instrument.id}"class="btn btn-primary">Dettagli</a>
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Cliente"))
        {
                                                                                    <a href="/Administration/Purchase/${instrument.id}" class="btn btn-primary">Compra</a>
        }
        @if (User.IsInRole("Admin"))
        {
                                                                                     <a href="/Administration/Resupply/${instrument.id}" class="btn btn-primary">Rifornisci</a>
        }
    }
    else
    {
                                                                     <a href="Identity/Account/Login" class="btn btn-primary">Compra</a>
    }
                                                                 <br/>
                                                                      <br/>
                                                                         <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                                                                              <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                                                                                  <button class="toggle-button${instrument.id} bg-transparent border border-white"   type="button">

                                                                                         <i onclick="myFunction(this)" class="fa fa-thumbs-up"></i>

                                                                      </button>
                                                                  <span id="like-count${instrument.id}"></span>

                                                    </div>
                                            
                                    </div>
                              </div>
                             `;





                });



            }

    @************************************************************************************@

                if (res.data.piuvenduti.length == 0) {

                document.getElementById('js_no_piuvenduti').classList.remove('d-none');
                document.getElementById('js_piuvenduti_table').classList.add('d-none');

            } else {

                document.getElementById('js_piuvenduti_table').classList.remove('d-none');
